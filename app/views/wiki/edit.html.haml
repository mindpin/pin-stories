.p
  = render 'wiki/parts/nav'
  

.new-page

  = flash.now[:error]
  
  = form_for @wiki_page, :url => { :action => "update" } do |f|
    .field
      %label.need 页面标题
      = f.text_field :title, :value => @wiki_page.title
      = f.hidden_field :product_id, :value => @wiki_page.product_id

      
    .field
      %label.need 内容
      %textarea{:name=>'wiki_page[content]', :style => 'width: 300px; height: 200px;'} #{@wiki_page.content}
      
      .field
        %a.form-submit-button{:href=>'javascript:;'} 发送